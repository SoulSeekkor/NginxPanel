@page "/"

@inject Services.Nginx Nginx;
@inject Services.ACME ACME;

<PageTitle>Index</PageTitle>
<br />
<br />
<h3>Nginx Version: @Nginx.Version</h3>
<h3>ACME Version: @ACME.Version</h3>

<br />
<br />
<span>
	@((MarkupString)@serviceDetails)
</span>

@code {
	private string serviceDetails = "";

	protected override void OnInitialized()
	{
		if (Nginx.ServiceStatus == Services.Nginx.enuServiceStatus.Failed)
		{
			serviceDetails = Nginx.ServiceDetails;
		}
	}
}